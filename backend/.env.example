# Server Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://edu4ai:password@localhost:5432/edu4ai"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# AI Model Configuration
DEFAULT_AI_PROVIDER=openai
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GOOGLE_MODEL=gemini-pro

# Safety Configuration
MIN_SAFETY_SCORE=0.7
MAX_TOKENS_PER_REQUEST=4000
MAX_REQUESTS_PER_MINUTE=30
MAX_REQUESTS_PER_HOUR=300

# Content Filtering
ENABLE_CONTENT_FILTERING=true
BLOCKED_KEYWORDS=inappropriate,harmful,dangerous
EDUCATIONAL_TOPICS=math,science,literature,history,programming,language

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Monitoring
ENABLE_MONITORING=true
MONITORING_ENDPOINT=/metrics